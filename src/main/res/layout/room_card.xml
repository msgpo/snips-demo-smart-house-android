<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/standard_margin"
                                    tools:showIn="@layout/activity_main">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/room_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/room_header_size"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/bg_kitchen" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:backgroundTint="@color/colorPrimaryDark"
            android:backgroundTintMode="multiply"
            android:gravity="center_horizontal"
            android:shadowColor="#80000000"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textColor="#ffffff"
            android:textSize="@dimen/room_header_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/room_img"
            app:layout_constraintStart_toStartOf="@+id/room_img"
            app:layout_constraintTop_toTopOf="@+id/room_img"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Kitchen"
            />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/room_item_1_img"
            android:layout_width="@dimen/room_item_image_size"
            android:layout_height="@dimen/room_item_image_size"
            android:layout_margin="@dimen/standard_margin"
            app:layout_constraintEnd_toStartOf="@+id/room_item_2_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/room_img"
            tools:src="@drawable/light_off"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/room_item_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#262626"
            android:textSize="@dimen/room_item_text_size"
            app:layout_constraintEnd_toEndOf="@+id/room_item_1_img"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/room_item_1_img"
            app:layout_constraintTop_toBottomOf="@+id/room_item_1_img"
            tools:text="Lights"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/room_item_1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:gravity="center_horizontal"
            android:textColor="#696e7d"
            android:textSize="@dimen/room_item_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/room_item_1_img"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/room_item_1_img"
            app:layout_constraintTop_toBottomOf="@+id/room_item_1_name"
            tools:text="50%"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/room_item_2_img"
            android:layout_width="@dimen/room_item_image_size"
            android:layout_height="@dimen/room_item_image_size"
            android:layout_margin="@dimen/standard_margin"
            app:layout_constraintEnd_toStartOf="@+id/room_item_3_img"
            app:layout_constraintStart_toEndOf="@+id/room_item_1_img"
            app:layout_constraintTop_toBottomOf="@id/room_img"

            tools:src="@drawable/heater_off"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/room_item_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#262626"
            android:textSize="@dimen/room_item_text_size"
            app:layout_constraintEnd_toEndOf="@+id/room_item_2_img"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/room_item_2_img"
            app:layout_constraintTop_toBottomOf="@+id/room_item_2_img"
            tools:text="Heater"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/room_item_2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:gravity="center_horizontal"
            android:textColor="#696e7d"
            android:textSize="@dimen/room_item_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/room_item_2_img"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/room_item_2_img"
            app:layout_constraintTop_toBottomOf="@+id/room_item_2_name"
            tools:text="21.5 Â°C"
            />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/room_item_3_img"
            android:layout_width="@dimen/room_item_image_size"
            android:layout_height="@dimen/room_item_image_size"
            android:layout_margin="@dimen/standard_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/room_item_2_img"
            app:layout_constraintTop_toBottomOf="@id/room_img"
            tools:src="@drawable/blinds_closed"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/room_item_3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#262626"
            android:textSize="@dimen/room_item_text_size"
            app:layout_constraintEnd_toEndOf="@+id/room_item_3_img"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/room_item_3_img"
            app:layout_constraintTop_toBottomOf="@+id/room_item_3_img"
            tools:text="Blinds"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/room_item_3_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:gravity="center_horizontal"
            android:textColor="#696e7d"
            android:textSize="@dimen/room_item_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/room_item_3_img"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/room_item_3_img"
            app:layout_constraintTop_toBottomOf="@+id/room_item_3_name"
            tools:text="Open" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
